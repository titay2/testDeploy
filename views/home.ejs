<% layout('layout2') %>

<div id="wrapper">

    <% include partials/sidebar %>


    <div id="page-content-wrapper">


        <% include partials/navbar %>

        <div class="container-fluid main_body">

            <a href="#menu-toggle" class="btn btn-default" id="menu-toogle">Toogle menu</a>
            <h1>Hello, <%= user.fullname %></h1>
            <p>What would you like to do today?</p>

            <div class="row">
                <div class="col-md-4" id="colDesc">
                    <div class="info-icon"><i class="fa fa-sign-in"></i></div>
                    <h3 class="text-center">Add A book</h3>
                    <p class="text-center">Add a books profile. Registered users can borrow rate and review </p>

                    <a href="/book/create" class="btn btn-block btn-primary link_btn">Add</a>
                </div>

                <div class="col-md-4" id="colDesc">
                    <div class="info-icon"><i class="fa fa-search"></i></div>
                    <h3 class="text-center">Search</h3>
                    <p class="text-center">Search through our book store and find your prefered choice.</p>

                    <a href="/book/search" class="btn btn-block btn-primary link_btn">Search</a>
                </div>

                <div class="col-md-4" id="colDesc">
                    <div class="info-icon"><i class="fa fa-star"></i></div>
                    <h3 class="text-center">Rate</h3>
                    <p class="text-center">Rate and review other Books and get your Books reviewed as well.</p>

                    <a href="/books" class="btn btn-block btn-primary link_btn">Rate</a>
                </div>
            </div>
        </div>
    </div>

</div>


















































