<% layout('layout2') %>

<div id="wrapper">


    <div id="page-content-wrapper">

        <% include ../partials/navbar %>

        <div class="container-fluid main_body">

            <div class="ul_links">
                <ul>
                    <li><a href="/home">Home</a></li> |
                    <li><a href="">Books</a></li> |
                    <li><a href="#">Register a Book</a></li>
                </ul>
            </div>
            <br>


            <div class="bodyDiv">
                <% if(noErrors) {%>
                <div class="alert alert-success">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">
                        &times;
                    </a>
                    <%= success %>

                </div>
                <% } %>


                <h4>Register a Book</h4>

                <form method="POST" action="/book/create/">

                    <div class="form-group ">
                        <label for="">Book title</label>
                        <span id="errorMsg1"></span>
                        <input id="title" class="form-control" name="title" type="text" style="margin-bottom:20px;">
                    </div>

                    <div class="form-group ">
                        <label for="">Author</label>
                        <span id="errorMsg2"></span>
                        <input id="author" class="form-control" name="author" type="text" style="margin-bottom:20px;">
                    </div>

                    <div class="form-group ">
                        <label for="">Genre</label>
                        <span id="errorMsg3"></span>
                        <input id="genre" class="form-control" name="genre" type="text" style="margin-bottom:20px;">
                    </div>
                    <div class="form-group">
                        <label for="description">Description:</label>
                        <textarea id="description" class="form-control" rows="4" name="description" type="text" ></textarea>
                    </div>
                    <label for="">Boook Image</label><br>
                    <span id="completed"></span>
                    <div class="row">
                        <div class="progress">
                            <div class="progress-bar" role="progressbar"></div>
                        </div>

                        <input type="file" class="form-control" name="upload" id="upload-input" style="display:none">

                        <button class="btn btn-lg upload-btn" type="button">Upload File</button>

                    <br><br>

                    <div class="form-group">
                        <input type="submit" id="register" value="Register" class="form-control btn btn-primary" name="register" style="">
                    </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

</div>



