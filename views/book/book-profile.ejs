<% layout('layout2') %>




<div id="wrapper">

    <% include ../partials/sidebar %>

    <div id="page-content-wrapper">
        <% include ../partials/navbar %>
        <div class="container-fluid main_body">
            <div class="ul_links">
                <ul>
                    <li><a href="/">Home</a></li> |
                    <li><a href="/books">Book</a></li> |
                    <li><a href="#">Book Profile</a></li>
                </ul>
            </div>

            <div class="bodyDiv">
                <hr>
                <div class="row mainDiv">
                    <div class="innerDiv">
                        <div class="col-md-3" style="margin-bottom:30px;">
                            <img src="/uploads/<%= data.image %>" width="270px" height="270px" alt="">
                            <h3><%= data.name %></h3>
                            <i class="glyphicon  ">Author: <%= data.author %>, </i><hr>
                            <i class="glyphicon  ">Gener: <%= data.genre %></i><hr>
                            <i class="glyphicon  ">About: <%= data.description %> </i><hr>
                            <i class="fa fa-user "> owner: <%= data.ownerName %> </i><hr>

                        </div>

                        <div class="col-md-9 colDiv">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="count">
                                        <h1>
                                            <%= data.ratingNumber.length %>
                                        </h1>
                                        <h2>Ratings</h2>
                                        <h3>Total ratings received</h3>
                                    </div>

                                </div>

                                <div class="col-md-4">
                                    <div class="count">
                                        <h1>
                                            <%= data.ratingSum %>
                                        </h1>
                                        <h2>Total Stars</h2>
                                        <h3>Total stars received</h3>
                                    </div>
                                </div>

                                <div class="col-md-4">
                                    <div class="count">
                                        <h1>
                                            <span class="star" data-score="<%= average %>"></span>
                                        </h1>
                                        <h2>Average Rating (<%= average %>)</h2>
                                        <h3>Based on 5 reviews</h3>
                                    </div>
                                </div><br><br>

                                <div class="col-md-12 header">
                                     <h2>Reviews (<%= data.ratingNumber.length %>)</h2>

                                    <div class="linkDiv">
                                        <a href="/review/<%= data._id %>" class="btn btn-success">
                                             Rate and Review This Book</a>

                                    </div>

                                </div>
                                <a href="/<%= data.name %>/owner" class="btn btn-info">Contact Book owner</a><br><br>


                                <% if(data.bookRating.length > 0) {%>
                                <% data.bookRating.forEach((val)=>{ %>
                                <div class="col-md-12 reviewDiv">

                                    <div class="col-md-8">
                                        <h1>
                                            <%= val.userFullname %>
                                        </h1>
                                        <p><%= val.userReview %></p>
                                    </div>

                                    <div class="col-md-2" style="width:150px">
                                        <h1>Rating</h1>
                                        <span class="star" data-score="<%= val.userRating %>"></span>
                                    </div>
                                </div>
                                <% })%>
                                <% }%>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>

</div>

